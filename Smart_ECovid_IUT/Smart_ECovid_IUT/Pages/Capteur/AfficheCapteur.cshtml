@page
@model Smart_ECovid_IUT.Pages.Capteur.AfficheCapteurModel
@using ClasseE_Covid.Capteur;
@using ClasseE_Covid.Campus;
@{

}
<div>
    <div class="border-bottom mb-4">
        <h1>Liste log etat plateforme</h1>
    </div>
    <div class="row">
        <div class="col-md-12 mb-4">
            <div class="card">
                <div class="card-header border-bottom">
                    <h3>Liste Capteur Temp</h3>
                </div>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th scope="col">Nom</th>
                                <th scope="col">Box</th>
                                <th scope="col">°C</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Temperature temperature in Model.Temperature)
                            {
                                <tr>
                                    <td>@temperature.NomTemp</td>
                                    <td>@temperature.NomBox</td>
                                    <td>@temperature.ValeurTemp</td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-header border-bottom">
                    <h3>Liste Capteur Co2</h3>
                </div>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th scope="col">Nom</th>
                                <th scope="col">Box</th>
                                <th scope="col">gaz m²</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Co2 co2 in Model.Co2)
                            {
                                <tr>
                                    <td>@co2.NomCo2</td>
                                    <td>@co2.NomBox</td>
                                    <td>@co2.ValeurCo2</td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-header border-bottom">
                    <h3>Liste Box Energie</h3>
                </div>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th scope="col">Box</th>
                                <th scope="col">Watt</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Energie nrj in Model.Energie)
                            {
                                <tr>
                                    <td>@nrj.NomBox</td>
                                    <td>@nrj.ValeurEnergie</td>
                                </tr>
                            }
                            </tr>

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-md-12 mb-4">
            <div class="card">
                <div class="card-header border-bottom">
                    <h3>Liste Taux occupation</h3>
                </div>
                <div class="row">
                    <div class="table-responsive col-md-6">
                        <h5>Liste Taux occupation Site</h5>
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th scope="col">Batiment</th>
                                    <th scope="col">Taux ocupation</th>
                                    <th scope="col">Capacité Max</th>

                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    foreach (OccupationSite taux in Model.occupationSite)
                                    {
                                        <tr>
                                            <td>@taux.NomSite</td>
                                            <td>@taux.TauxOccupation</td>
                                            <td>@taux.CapaciteMaxSite</td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="table-responsive col-md-6">
                        <h5>Liste Taux occupation Batiment</h5>
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th scope="col">Batiment</th>
                                    <th scope="col">Taux ocupation</th>
                                    <th scope="col">Capacité Max</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    foreach (OccupationBatiment taux in Model.occupationBatiment)
                                    {
                                        <tr>
                                            <td>@taux.NomBatiment</td>
                                            <td>@taux.TauxOccupation</td>
                                            <td>@taux.CapaciteMaxBat</td>
                                        </tr>
                                    }
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>