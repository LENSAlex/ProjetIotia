@page
@model Smart_ECovid_IUT.Pages.Capteur.AfficheCapteurModel
@using ClasseE_Covid.Capteur;
@{

}
<div>
    <div class="border-bottom mb-4">
        <h1>Liste log etat plateforme</h1>
    </div>
    <div class="row">
        <div class="col-md-12 mb-4">
            <div class="card">
                <div class="card-header border-bottom">
                    <h3>Liste Capteur Temp</h3>
                </div>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th scope="col">Nom</th>
                                <th scope="col">Box</th>
                                <th scope="col">°C</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Temperature temperature in Model.Temperature)
                            {
                                <tr>
                                    <td>@temperature.NomTemp</td>
                                    <td>@temperature.NomBox</td>
                                    <td>@temperature.ValeurTemp</td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-header border-bottom">
                    <h3>Liste Capteur Co2</h3>
                </div>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th scope="col">Nom</th>
                                <th scope="col">Box</th>
                                <th scope="col">gaz m²</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Co2 co2 in Model.Co2)
                            {
                                <tr>
                                    <td>@co2.NomCo2</td>
                                    <td>@co2.NomBox</td>
                                    <td>@co2.ValeurCo2</td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-header border-bottom">
                    <h3>Liste Box Energie</h3>
                </div>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th scope="col">Box</th>
                                <th scope="col">Watt</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Energie nrj in Model.Energie)
                            {
                                <tr>
                                    <td>@nrj.NomBox</td>
                                    <td>@nrj.ValeurEnergie</td>
                                </tr>
                            }
                            </tr>

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-header border-bottom">
                    <h3>Liste Capteur Taux occupation</h3>
                </div>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th scope="col">Nom</th>
                                <th scope="col">Box</th>
                                <th scope="col">°C</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <th scope="row">CO2</th>
                                <td>Box - 1</td>
                                <td>95%</td>
                            </tr>
                            <tr>
                                <th scope="row">Température</th>
                                <td>Box - 52</td>
                                <td>10%</td>
                            </tr>
                            <tr>
                                <th scope="row">RFIS</th>
                                <td>Box - 628</td>
                                <td>36%</td>
                            </tr>

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>