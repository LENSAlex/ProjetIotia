@page
@model Smart_ECovid_IUT.Pages.Campus.CreeModifCampusModel
@{
    ViewData["Title"] = "Home page";
}
<div class="container">
    <div class="border-bottom mb-4">
        <h1> Création Campus</h1>
    </div>
    <div class="row">
        <div class="col-md-12 mb-4">
            <div class="card mb-4">
                <div class="card-header border-bottom">
                    <h3>Création Batiment</h3>
                </div>
                <div class="card-body border-bottom">
                    <form>
                        <div class="form-row">
                            <div class="col-md-6 mb-3">
                                <label for="Nom">Nom</label>
                                <input type="text" class="form-control leNom" id="Nom" placeholder="Nom" required />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="Nom">Km²</label>
                                <input type="text" class="form-control laSurface" id="surface" name="surface" placeholder="200" required />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="Nom">Etage</label>
                                <input type="text" class="form-control lEtage" id="etage" name="etage" placeholder="8" required />
                            </div>
                            <div class="col-md-6 mb-3 ">
                                <label for="Batiment">Campus</label>
                                <select class="form-control select2-multiple leCampus" name="campus" aria-hidden="true">
                                    <option data-tokens="ketchup mustard">Sophia </option>
                                    <option data-tokens="mustard">Fabron</option>
                                    <option data-tokens="frosting">Carlone</option>
                                </select>
                            </div>
                            <div class="etageenplus">

                            </div>

                        </div>
                        <button class="btn btn-primary envoie" type="submit">Envoie</button>
                    </form>
                </div>
            </div>

            <div class="card  mb-4">
                <div class="card-header border-bottom">
                    <h3>Création Salle</h3>
                </div>
                <div class="card-body border-bottom">
                    <form>
                        <div class="form-row">
                            <div class="col-md-4 mb-3">
                                <label for="Nom">Salle</label>
                                <input type="text" class="form-control" id="salle" placeholder="Nom" required />
                            </div>
                            <div class="col-md-4 mb-3">
                                <label for="Nom">Etage</label>
                                <input type="text" class="form-control" id="salle" placeholder="2" required />
                            </div>
                            <div class="col-md-4 mb-3 ">
                                <label for="Batiment">Batiment</label>
                                <select class="form-control select2-multiple" aria-hidden="true">
                                    <option data-tokens="ketchup mustard">Informatique</option>
                                    <option data-tokens="mustard">INFO COM</option>
                                    <option data-tokens="frosting">Cyber</option>
                                </select>
                            </div>
                        </div>
                        <button class="btn btn-primary" type="submit">Submit form</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script>
    $(".lEtage").keyup(function (e) {

        $(this).val($(this).val().replace(/[a-zA-Z]/, ""));

        if ($(this).val() == "0") {
            $(this).val("1");
        }

        if ($(this).val() >= 6) {
            $(this).val("6");
        }

        for (var i = 0; i >= $(this).val(); i++)
        {
            var txt1 = '<div class="col-md-12 mb-3">\
                            <label for= "Nom">Superfice</label> \
                            <input type="text" class="form-control" id="Superfice'+ i + '" placeholder="Superfice' + i + '" required /> \
                        </div >';
        }

    $(".etageenplus").append(txt1);
    })
</script>