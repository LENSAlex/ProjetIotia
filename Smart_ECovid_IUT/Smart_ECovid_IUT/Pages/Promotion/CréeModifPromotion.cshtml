@page
@model Smart_ECovid_IUT.Pages.Promotion.CréeModifPromotionModel
@{
    ViewData["Title"] = "Home page";
}
<div class="container">
    <div class="border-bottom mb-4">
        <h1> Création Promotion</h1>
    </div>
    <div class="row">
        <div class="col-md-12 mb-4">
            <div class="card mb-4">
                <div class="card-header border-bottom">
                    <h3>Création une Formation</h3>
                </div>
                <div class="card-body border-bottom">

                    <form method="post">
                        <div class="form-row">
                            <div class="col-md-4 mb-3">
                                <label for="Nom">Nom</label>
                                <input type="text" class="form-control" id="nom" name="nom" placeholder="Nom" required />
                            </div>
                            <div class="col-md-4 mb-3">
                                <label for="Nom">Année</label>
                                <input type="text" class="form-control" id="id" name="id" placeholder="2020" required />
                            </div>
                            <div class="col-md-4 mb-3">
                                <label for="Batiment">Durée</label>
                                <input type="text" class="form-control" id="duree" name="duree" placeholder="1" required />

                            </div>
                            <div class="col-md-4 mb-3">
                                <label for="Batiment">Prof principale</label>
                                <select class="form-control select" aria-hidden="true" id="prof" name="prof">
                                    <option value="1">True</option>
                                </select>
                            </div>
                        </div>
                        <button class="btn btn-primary" type="submit" asp-page-handler="EnvoieDonne">Ajouter</button>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

