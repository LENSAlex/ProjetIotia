@page
@model Smart_ECovid_IUT.Pages.Utilisateur.ListeUtilisateurModel
@using ClasseE_Covid.Utilisateur
@{
    ViewData["Title"] = "Home page";
}
<div>
    <div class="border-bottom mb-4">
        <h1>Liste Utilisateur</h1>
    </div>
    <div class="row">
        <div class="col-md-12 mb-4">
            <div class="card">
                <div class="card-header border-bottom">
                    <h3>Liste Utilisateur</h3>
                </div>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th scope="col">Nom</th>
                                <th scope="col">Prénom</th>
                                <th scope="col">Sexe</th>
                                <th scope="col">Anniversere</th>
                                <th scope="col">EMail</th>
                                <th scope="col">Formation</th>
                                <th scope="col">Niveau</th>
                                <th scope="col">Téléphone</th>
                                <th scope="col">INE / NUMEN</th>
                                <th scope="col">Action</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (Utilisateur user in Model.Branches)
                            {
                                <tr>

                                    <td>@user.Nom</td>
                                    <td>@user.Prenom</td>
                                    <td>@user.Sexe</td>
                                    <td>@user.Anniv</td>
                                    <td>@user.Email</td>
                                    <td>@user.NomFormation</td>
                                    <td>@user.Niveau</td>
                                    <td>@user.Telephone</td>
                                    <td>@user.NumRef</td>
                                    <td>
                                        <a asp-page="/Utilisateur/CreeModifUtilisateur"><i class="far fa-edit"></i>"</a>
                                        <a asp-page="/Utilisateur/CreeModifUtilisateur"><i class="far fa-trash-alt"></i>"</a>
                                    </td>
                                </tr>

                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
