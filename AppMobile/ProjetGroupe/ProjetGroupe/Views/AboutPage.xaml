<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjetGroupe.Views.AboutPage"
             xmlns:pv="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView" 
             Title="Contacts et Autres"
             xmlns:vm="clr-namespace:ProjetGroupe.ViewModels"
             Shell.NavBarIsVisible="True"
             Shell.SearchHandler="Test">
    
    <ContentPage.BindingContext>
            <vm:AboutViewModel />
    </ContentPage.BindingContext>
    
        <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="Accent">#96d1ff</Color>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid BackgroundColor="#F9F9F9" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" Padding="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <ListView Grid.Row="1" x:Name="listViews" ItemsSource="{Binding Items}" >
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell Height="200">
                            <Frame HasShadow="True" Margin="5" BackgroundColor="AliceBlue" BorderColor="{StaticResource Key=Accent}" Padding="5">
                                <Grid Padding="0">
                                    <StackLayout Orientation="Horizontal" Spacing="25" HorizontalOptions="FillAndExpand">
                                        <Label Text="{Binding Id}" FontAttributes="Bold"  FontSize="12" TextColor="Red" />
                                        <Label Text="{Binding Name}" FontAttributes="Bold" TextColor="Green" />
                                    </StackLayout>
                                </Grid>
                            </Frame>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <pv:PancakeView Grid.Row="2" BackgroundColor="BlanchedAlmond" x:Name="DetailsView" CornerRadius="0,0,0,0" Padding="35,35,35,0" Margin="0,0,0,0" VerticalOptions="FillAndExpand">
                <ScrollView HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" VerticalScrollBarVisibility="Never">
                    <StackLayout Spacing="25" HorizontalOptions="FillAndExpand">
                        <Grid HorizontalOptions="FillAndExpand">
                            <StackLayout Orientation="Horizontal" Spacing="5" HorizontalOptions="FillAndExpand">
                                <Image HeightRequest="12" WidthRequest="8" Source="address.png" VerticalOptions="Center" HorizontalOptions="Start"/>
                                <Label Text="Capteurs: " FontSize="16" TextColor="Black" FontFamily="ThemeFontRegular" HorizontalOptions="Start" VerticalOptions="Center"/>
                            </StackLayout>
                            <ImageButton BackgroundColor="Transparent" Aspect="Fill" HeightRequest="40" WidthRequest="40" Source="data2.png" VerticalOptions="Center" HorizontalOptions="End"/>

                        </Grid>
                        <StackLayout Grid.Row="1" Spacing="15" >
                            <Label Text="Mesures:" FontSize="20" FontFamily="ThemeFontBold" TextColor="#515151"/>
                        </StackLayout>
                        <BoxView HeightRequest="1" VerticalOptions="Start" HorizontalOptions="FillAndExpand" BackgroundColor="DarkGray"/>
                        <BoxView HeightRequest="1" VerticalOptions="Start" HorizontalOptions="FillAndExpand" BackgroundColor="DarkGray"/>
                        <StackLayout Grid.Row="1" Spacing="15" >
                            <Label Text="Consommation Energétique:" FontSize="20" FontFamily="ThemeFontBold" TextColor="#515151"/>
                        </StackLayout>
                    </StackLayout>
                </ScrollView>
            </pv:PancakeView>
        </Grid>
    </Grid>
</ContentPage>
